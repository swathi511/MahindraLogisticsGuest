<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_fromdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="46dp"
        android:text="From Date"
        android:textColor="#800000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_fromdate"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_fromdate"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shaperectangle"
        android:hint="From Date"
        android:maxLines="1"
        android:padding="8sp"
        android:textColor="#233" />
    <Button
        android:id="@+id/button_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edit_fromdate"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="#0090db"
        android:text="select"
        android:textColor="#ffff" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_todate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_Todate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="To Date"
            android:textColor="#800000"
            android:textSize="18sp" />

        <EditText

            android:id="@+id/edit_Todate"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shaperectangle"
            android:hint="To Date"
            android:maxLines="1"
            android:padding="8sp"
            android:textColor="#233" />

        <Button
            android:id="@+id/buton_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_todate"
            android:layout_alignBottom="@+id/text_todate"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="#0090db"
            android:text="select"
            android:textColor="#ffff" />

    </RelativeLayout>


</LinearLayout>
