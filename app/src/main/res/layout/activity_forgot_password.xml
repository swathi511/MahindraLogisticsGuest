<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/afp_rLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorPrimary"

        >

        <ImageView android:id="@+id/afp_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Username/Password"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:padding="8dp"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <TextView android:id="@+id/afp_tv_funame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Login Email Id!"
        android:textColor="@color/colorBlack"
        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/afp_rLayout"
        android:gravity="center"
        />

    <TextView android:id="@+id/afp_tv_fpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Password!"
        android:textColor="@color/colorBlack"
        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/afp_tv_funame"
        android:gravity="center"
        />




    <LinearLayout android:id="@+id/afp_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/afp_tv_fpwd">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/afp_et_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/am_vw"
            android:background="@drawable/login_bg"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:padding="12dp"
            android:hint="Enter your mobile number"
            android:textColorHint="#4e4e4e"
            android:maxLines="1"
            android:inputType="number"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="12dp"
            android:textSize="16sp"/>

        <Button android:id="@+id/afp_bt_get_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/am_et_pwd"
            android:background="@color/colorGray"
            android:text="Continue"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:padding="12dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_margin="24dp"
            android:textColor="@color/colorWhite"
            />

        <TextView android:id="@+id/afp_tv_sms_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="* Details will be sent to registered email id."
            android:textColor="#4e4e4e"
            android:textSize="14sp"
            android:gravity="center"
            />



        <TextView android:id="@+id/afp_tv_login1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN HERE"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:layout_margin="16dp"
            android:layout_gravity="center"

            />


    </LinearLayout>

    <LinearLayout android:id="@+id/afp_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/afp_ll1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/afp_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/am_vw"
            android:background="@drawable/login_bg"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:padding="12dp"
            android:hint="Enter your email id"
            android:textColorHint="#4e4e4e"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="12dp"
            android:textSize="16sp"/>

        <Button android:id="@+id/afp_bt_get_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/am_et_pwd"
            android:background="@color/colorGray"
            android:text="Continue"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:padding="12dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_margin="24dp"
            android:textColor="@color/colorWhite"
            />

        <TextView android:id="@+id/afp_tv_sms_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="* Details will be sent to the registered email id."
            android:textColor="#4e4e4e"
            android:textSize="14sp"
            android:gravity="center"
            />



        <TextView android:id="@+id/afp_tv_login2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN HERE"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:layout_margin="16dp"
            android:layout_gravity="center"

            />


    </LinearLayout>

</RelativeLayout>