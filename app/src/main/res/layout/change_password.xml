    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textColor="#234"
            android:textSize="14sp"
            android:id="@+id/cp_tv_new_pass"
            android:layout_weight="0.8"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_newpassword"
            android:maxLines="1"
            android:textColor="#233"
            android:padding="6dp"
            android:background="@drawable/shapehello"
            android:hint="New password"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:layout_weight="1"
            android:drawableRight="@drawable/pass"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="#234"
            android:textSize="14sp"
            android:id="@+id/cp_tv_confrm_pass"
            android:layout_weight="0.8"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editconfirmpassword"
            android:maxLines="1"
            android:textColor="#233"
            android:padding="6dp"
            android:background="@drawable/shapehello"
            android:hint="Confirm password"
            android:inputType="textPassword"

            android:textSize="15sp"
            android:layout_weight="1"
            android:drawableRight="@drawable/pass"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/butn_save"
        android:text="save"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:id="@+id/button_save"/>

</LinearLayout>